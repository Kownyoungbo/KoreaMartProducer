<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_top" >

                    <Button
                        android:id="@+id/BtnSlide"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/menu_btn" />

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2.3"
                            android:orientation="horizontal" >

                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.4" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="10"
                                android:background="@drawable/logo" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.4" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/BtnHome"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/home_btn" />
                </LinearLayout>

                <com.koreajt.producer.util.HorizontalSlider
                    android:id="@+id/progress_horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="8dip"
                    android:progressDrawable="@drawable/progressbar_custom"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="8.8" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/webViewContainer"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/blindLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#90191919"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/pageError"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="75dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="57.6dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/warning" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="네트워크가 연결되어 있지 않습니다."
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:paddingBottom="20dp"
                                    android:text="문재를 해결 하시려면 아래 버튼을 터치해 주세요"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="#86be37" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/netErrorData"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/select_btn"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/btnStartText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="데이터 네트워크 설정"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#CCCCCC" />

                        <LinearLayout
                            android:id="@+id/netErrorWifi"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/select_btn"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/btnStartText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="와이파이 설정"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#CCCCCC" />

                        <LinearLayout
                            android:id="@+id/webReload"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/select_btn"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/btnStartText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="페이지 새로고침"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!-- 도움말 레이아웃 -->

        <LinearLayout
            android:id="@+id/helpLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#90191919"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        android:id="@+id/helpLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imgv_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/help_btnLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|right"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/helpBtn"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_help_on" />
            </LinearLayout>
        </LinearLayout>

        <!-- 녹음 레이아웃 -->

        <LinearLayout
            android:id="@+id/recLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#90191919"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#90191919"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/mic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="@string/rec01"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <View
                            android:layout_width="50dp"
                            android:layout_height="1dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rec02"
                            android:textColor="#BDBDBD"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <View
                            android:layout_width="50dp"
                            android:layout_height="1dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rec03"
                            android:textColor="#BDBDBD"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical|left"
                    android:text="   "
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.koreajt.producer.util.HorizontalSlider
                    android:id="@+id/recProgressBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:max="30000"
                    android:padding="10dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/progressbar_custom" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvRecStartPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical|left"
                        android:text="00:00"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvRecMaxPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical|right"
                        android:text="00:30"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#86be37" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/btnStartRec"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/select_btn"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/btnRecImg"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/rec_icon"
                            android:paddingRight="3dp" />

                        <TextView
                            android:id="@+id/btnRecText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="녹음"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/btnStartPlay"
                        android:layout_width="0dip"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/select_btn"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/btnStartImg"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/play_icon"
                            android:paddingRight="3dp" />

                        <TextView
                            android:id="@+id/btnStartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="재생"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="#CCCCCC" />

                    <LinearLayout
                        android:id="@+id/btnSend"
                        android:layout_width="0dip"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/select_btn"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/btnSendImg"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/send_icon2"
                            android:paddingRight="3dp" />

                        <TextView
                            android:id="@+id/btnSendText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전송"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 공사중 레이아웃 -->

        <LinearLayout
            android:id="@+id/gongsa"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#90191919"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:layout_width="127dp"
                    android:layout_height="100dp"
                    android:src="@drawable/gongsa" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#86be37" />

            <Button
                android:id="@+id/gongsaCancle"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_btn"
                android:gravity="center"
                android:text="닫기"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>