<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#90d2d2d2"
                android:centerY="0.75"
                android:endColor="#90c8c8c8"
                android:startColor="#90b4b4b4" />
            <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:startColor="#3EB24A"
                    android:centerColor="#2D8537"
                    android:endColor="#18471D"
                    android:angle="270"
                    android:centerY="0.75"/>

                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
                
                
            </shape>
        </clip>
    </item>

</layer-list>